<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DeleteNoteActivity">

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_note_to_delete"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Notes List -->
    <ListView
        android:id="@+id/listViewDeleteNotes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:listSelector="#E3F2FD"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:layout_marginBottom="16dp" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/txtNoNotes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/no_notes_to_delete"
        android:textColor="#757575"
        android:textSize="18sp"
        android:visibility="gone" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/button_cancel"
            android:backgroundTint="#757575" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/button_delete"
            android:backgroundTint="#F44336" />

    </LinearLayout>

</LinearLayout>